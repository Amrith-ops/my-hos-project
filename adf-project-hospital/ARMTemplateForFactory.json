{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-project-hospital"
		},
		"hosprojectvault_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://hos-project-keyvault2.vault.azure.net/"
		},
		"FinalProcessedDatabase_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "localhost"
		},
		"FinalProcessedDatabase_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "hospital_final_dataset"
		},
		"FinalProcessedDatabase_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "root"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/hosprojectvault')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "lined service used to retrieve the secrets",
				"annotations": [],
				"type": "AzureKeyVault",
				"typeProperties": {
					"baseUrl": "[parameters('hosprojectvault_properties_typeProperties_baseUrl')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/onprem-clould-hos-dataflow')]",
			"type": "Microsoft.DataFactory/factories/integrationRuntimes",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "SelfHosted",
				"description": "Runtime used for transferring data between the windows on-prem machine and cloud storage account",
				"typeProperties": {}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/FinalProcessedDatabase')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Stores the data in mysql which is present in gold layer ",
				"annotations": [],
				"type": "MySql",
				"typeProperties": {
					"server": "[parameters('FinalProcessedDatabase_properties_typeProperties_server')]",
					"port": 3306,
					"database": "[parameters('FinalProcessedDatabase_properties_typeProperties_database')]",
					"username": "[parameters('FinalProcessedDatabase_properties_typeProperties_username')]",
					"sslMode": 1,
					"useSystemTrustStore": 0,
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "hosprojectvault",
							"type": "LinkedServiceReference"
						},
						"secretName": "datapass"
					},
					"driverVersion": "v2"
				},
				"connectVia": {
					"referenceName": "onprem-clould-hos-dataflow",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/integrationRuntimes/onprem-clould-hos-dataflow')]",
				"[concat(variables('factoryId'), '/linkedServices/hosprojectvault')]"
			]
		}
	]
}